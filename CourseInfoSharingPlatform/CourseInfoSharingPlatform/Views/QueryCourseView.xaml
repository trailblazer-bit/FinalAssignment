            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderBrush="#EEE" BorderThickness="0,0,0,3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Python程序设计" Width="400" FontSize="21" Margin="20 0 0 0" VerticalAlignment="Center" />
                            <TextBlock Text="评分:4.7" Margin="60,0,0,0"  FontSize="21" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1">
                            <TextBlock  Text="课头号:123" FontSize="14" Margin="20,0,0,0"/>
                            <TextBlock Text="课程类型:公选课" FontSize="14" Margin="20,0,0,0"/>
                            <TextBlock  Text="任课老师:张三" FontSize="14" Margin="20,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10,0,0,0">
                            <Border Background="#EEE" Margin="10,5" CornerRadius="5">
                                <TextBlock Text="给分多" Margin="12,3"/>
                            </Border>
                            <Border Background="#EEE" Margin="10,5" CornerRadius="5">
